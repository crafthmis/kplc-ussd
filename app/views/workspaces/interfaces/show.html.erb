<div class="page-header">
  <%= link_to interfaces_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_interface_path(@interface), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show interface</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @interface.name %></dd>

  <dt>Description:</dt>
  <dd><%= @interface.description %></dd>

</dl>
