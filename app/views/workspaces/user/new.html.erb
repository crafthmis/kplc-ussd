                <% if @user.errors.any? %>
                  <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                <% end %>
              </div>


    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text"  id="basic-addon1">KPL</span>
      </div>
       <%= f.text_field :username, :class => "form-control",:id => "staff_no", autocomplete: "off","aria-describedby".to_sym => "basic-addon1",placeholder: "e.g 87028" %>
       </div>
             
         <div class="form-group">
          <%= f.text_field :email,class: "mr-3 form-control" ,placeholder: "Email address" %></p>
         </div>

              <div class="form-group">
               <%= f.submit "Reset & Invite",class: "btn btn-primary block" %>
              </div>
            <% end %>
          </div>
        </div>
</div>

