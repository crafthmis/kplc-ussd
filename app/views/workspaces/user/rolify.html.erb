<% @minititle = "Change User Roles" %>
   <!-- Inline Form-->
 <div class="col-lg-12">                           
        <div class="card">
          <div class="card-body">
          <%= form_tag add_role_user_index_path do |f| %>

                <p style="text-align: center;"><%= @user.email%></p>

                 <div class="form-group">
                    <div class="col-sm-12">
                      <% options = options_for_select([ "Staff","Admin","Regional Admin" ], "User")%>
                      <%= select_tag :role, options, {class: 'form-control'} %>
                    </div>
                  </div>

                  <%= hidden_field_tag :id ,@user.id %>
                  
                  <div class="form-group" style="text-align: center;">
                      <%= submit_tag "Add Role", class: "btn btn-primary" %>
                  </div>
           <% end %>
      </div>
    </div>
</div>


