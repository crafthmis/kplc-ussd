


<body class="hold-transition lockscreen jumbotron">

<div class="lockscreen-wrapper">
  <div class="lockscreen-logo">
    <a href="#"><b>KPLC</b>SPARK</a>
  </div>
  <!-- User name -->

  <!-- START LOCK SCREEN ITEM -->

   
    <div class="lockscreen-item">
         <div class="lockscreen-image">
             <%= image_tag "avatar.png", alt: "User Image" %>
          </div>


    <!-- lockscreen credentials (contains the form) -->
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post ,class: "lockscreen-credentials" } ) do |f| %>


     <div class="input-group">
        <%= f.email_field :email ,:class => 'form-control',placeholder: 'Email'  %>

        <div class="input-group-append">

       <%= f.button :submit, class: "btn"  do %>
           <i class="fas fa-arrow-right text-muted"></i>
       <% end %>


      </div>




   




   <% end -%>
  </div>
</div>
          <!-- /.lockscreen-item -->


     <div class="help-block text-center">
	    <%= devise_error_messages! %>
	  </div>
    <!-- /.lockscreen credentials -->


  <div class="help-block text-center">
    Enter your email to resend unlock instructions
  </div>
  <div class="text-center"> - OR -
    <%= render "users/shared/links" %>
  </div>

  <p class="mb-0">
    <%= flash_messages layout_flash: false %>
  </p>


</body>
