<%= form_for(@demand, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @demand.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@demand.errors.count, "error") %> prohibited this demand from being saved:</h4>

      <ul>
      <% @demand.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :request_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :request_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :request_timestamp, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :request_timestamp, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :channel, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :channel, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :operation, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :operation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :offer_code, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :offer_code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :customer, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :customer, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :link_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :link_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :content, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
