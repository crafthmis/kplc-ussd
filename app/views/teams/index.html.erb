




    <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Teams</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fas fa-times"></i></button>
          </div>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped projects">
              <thead>
                  <tr>
                      <th style="width: 1%">
                          #
                      </th>
                      <th style="width: 20%">
                          Team Name
                      </th>
                      <th style="width: 30%">
                          Members
                      </th>
                      <th style="width: 20%">
                        Application Interfaces
                      </th>
                       <th style="width: 20%">
                      </th>
                  </tr>
              </thead>
              <tbody>
                 <%= content_tag_for(:tr, @teams) do |team| %>
                  <tr>
                      <td>
                          #
                      </td>
                      <td>
                          <a>
                              <%= team.name %>
                          </a>
                          <br/>
                          <small>
                              Created <%= time_ago_in_words(team.created_at) %> by <%= team.owner.email %>
                          </small>
                      </td>
                      <td>
                          <ul class="list-inline">
                              <li class="list-inline-item">
                                <%=image_tag("avatar.png",alt: "Avatar", class: "table-avatar") %>
                              </li>
                             <%= team.memberships.size %>
                          </ul>
                      </td>

                      <td><%= team.team_interfaces.map(&:name).join ',' %></td>
                   
                      <td class="project-actions text-right">
                        <%= link_to organization_team_path(@organization,team),class: "btn btn-primary btn-sm" do %>
                              <i class="fas fa-folder">
                              </i>
                              View
                        <%end%>
                        <%= link_to edit_organization_team_path(@organization,team)  ,class: "btn btn-info btn-sm" do %>
                             <i class="fas fa-pencil-alt">
                              </i>
                              Edit
                        <%end%>

                        <%= link_to organization_team_path(@organization,team), class: "btn btn-danger btn-sm" , method: :delete, data: { confirm: 'Are you sure?' } do %>
                               <i class="fas fa-trash">
                              </i>
                              Delete
                        <%end%>
                      </td>
                  </tr>
                   <% end %>
                </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
