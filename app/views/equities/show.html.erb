<div class="page-header">
  <%= link_to equities_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_equity_path(@equity), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show equity</h1>
</div>

<dl class="dl-horizontal">
  <dt>Customer:</dt>
  <dd><%= @equity.customer %></dd>

  <dt>Amount:</dt>
  <dd><%= @equity.amount %></dd>

  <dt>Status:</dt>
  <dd><%= @equity.status %></dd>

  <dt>Equitable:</dt>
  <dd><%= @equity.equitable %></dd>

</dl>
