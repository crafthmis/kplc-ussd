







    <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><%= @audience.name %> Subscribers</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fas fa-times"></i></button>
          </div>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped projects">
              <thead>
                  <tr>
                      <th style="width: 1%">
                          #
                      </th>
                      <th style="width: 20%">
                          Name
                      </th>
                      <th style="width: 20%">
                          Number
                      </th>
                                        <th style="width: 30%">
                      </th>
                  </tr>
              </thead>
              <tbody>
                 <%= content_tag_for(:tr, @audience.contacts) do |contact| %>
                  <tr>
                      <td>
                          #
                      </td>
                      <td>

                        <ul class="list-inline">
                              <li class="list-inline-item">
                                <%=image_tag("avatar.png",alt: "Avatar", class: "table-avatar") %>
                              </li>

                                <a>
                                    <%= "#{contact.first_name} #{contact.last_name}" %></br>
                             

                          <small>
                              Created <%= time_ago_in_words(contact.created_at) %>
                          </small>    </a>
                           
                          </ul>

                        



                      </td>
                      <td>

                            +254<%= contact.number %>
                      </td>
                   
                      <td class="project-actions text-right">
       
                        <%= link_to team_sms_manager_contact_path(current_team,contact) ,class: "btn btn-danger btn-sm" , method: :delete, data: { confirm: 'Are you sure?' } do %>
                               <i class="fas fa-trash">
                              </i>
                              Remove From Audience
                        <%end%>


                      </td>
                  </tr>
                   <% end %>
                </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
