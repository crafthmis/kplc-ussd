

    <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Campaigns</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fas fa-times"></i></button>
          </div>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped projects">
              <thead>
                  <tr>
                      <th >
                          #
                      </th>
                      <th>
                           Name
                      </th>
                      <th>
                          Type
                      </th>
                      <th>
                          Audiences 
                      </th>
                      <th>
                          Message
                      </th>

                                        <th>
                      </th>
                  </tr>
              </thead>
              <tbody>
                  <%= content_tag_for(:tr, @campaigns) do |sms_manager_campaign| %>
                  <tr>
                      <td>
                          #
                      </td>
                      <td>
                          <a>
                              <%= sms_manager_campaign.name %>
                          </a>
                          <br/>
                          <small>
                              Created <%= sms_manager_campaign.created_at.strftime("%Y-%m-%d") %>
                          </small>
                      </td>

                      <td>
                            
                             <%= sms_manager_campaign.type.titleize %>
                      </td>

                      <td>
                          <ul class="list-inline">
                              <li class="list-inline-item">
                                <%=image_tag("avatar.png",alt: "Avatar", class: "table-avatar") %>
                              </li>
                             <%= sms_manager_campaign.audience.name.titleize %>
                          </ul>
                      </td>

                     <td>
                          <ul class="list-inline">
                              <li class="list-inline-item">
                              </li>
                             <%= sms_manager_campaign.message %>
                          </ul>
                      </td>


               
                      <td class="project-actions text-right">
                        <%= link_to team_sms_manager_campaign_path(current_team,sms_manager_campaign) ,class: "btn btn-primary btn-sm" do %>
                              <i class="fas fa-folder">
                              </i>
                              View
                        <%end%>
                    
 <!--
                        <%#= link_to [:edit_sms_manager,sms_manager_campaign]  ,class: "btn btn-info btn-sm" do %>
                             <i class="fas fa-pencil-alt">
                              </i>
                              Edit
                        <%#end%>

                        <%#= link_to [:sms_manager,sms_manager_campaign] ,class: "btn btn-danger btn-sm" , method: :delete, data: { confirm: 'Are you sure?' } do %>
                               <i class="fas fa-trash">
                              </i>
                              Delete
                        <%#end%> -->
                      </td>
                  </tr>
                   <% end %>
                </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>

