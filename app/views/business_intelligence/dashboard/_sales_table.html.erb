  <div class="card">

  <div class="card-header border-0">
                <h3 class="card-title">Products</h3>
                <div class="card-tools">
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-download"></i>
                  </a>
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-bars"></i>
                  </a>
                </div>
   </div>


    <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                  <thead>
                  <tr>
                    <th>Period</th>
                    <th>Sales</th>
                    <th>Energy Purchase Cost</th>
                    <th>Other Costs</th>
                    <th>Profit</th>
                    <th>Profit Margin</th>



                  </tr>
                  </thead>
                  <tbody>
                <% @sales.each do |sale| %>
                      <tr>
                        <td>
                          <%= sale["pp"] %>
                        </td>

                        <td>
                          <%= sale[" Sales"] %>
                        </td>

                        <td>
                         <%= sale["Energy purchase costs"] %>
                        </td>

                        <td>
                         <%= sale["Other Costs"] %> 
                        </td>

                        <td>
                         <%= sale["profit"] %>
                        </td>

                        <td>
                          <%= sale["profit_margin"] %> 
                        </td>

                      </tr>
                <%end%>
                  </tbody>

                </table>
          </div>
</div>
