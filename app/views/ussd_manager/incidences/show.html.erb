<div class="page-header">
  <%= link_to incidences_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_incidence_path(@incidence), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show incidence</h1>
</div>

<dl class="dl-horizontal">
  <dt>Kind:</dt>
  <dd><%= @incidence.kind %></dd>

  <dt>Explanation:</dt>
  <dd><%= @incidence.explanation %></dd>

  <dt>Customer:</dt>
  <dd><%= @incidence.customer %></dd>

</dl>
