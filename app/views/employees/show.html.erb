<div class="page-header">
  <%= link_to employees_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_employee_path(@employee), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show employee</h1>
</div>

<dl class="dl-horizontal">
  <dt>First name:</dt>
  <dd><%= @employee.first_name %></dd>

  <dt>Middle name:</dt>
  <dd><%= @employee.middle_name %></dd>

  <dt>Last name:</dt>
  <dd><%= @employee.last_name %></dd>

  <dt>Staff number:</dt>
  <dd><%= @employee.staff_number %></dd>

  <dt>Job category:</dt>
  <dd><%= @employee.job_category %></dd>

  <dt>Region:</dt>
  <dd><%= @employee.region %></dd>

  <dt>Station:</dt>
  <dd><%= @employee.station %></dd>

  <dt>Job title:</dt>
  <dd><%= @employee.job_title %></dd>

  <dt>Division:</dt>
  <dd><%= @employee.division %></dd>

  <dt>Section:</dt>
  <dd><%= @employee.section %></dd>

</dl>
